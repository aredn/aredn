#! /bin/sh
if [ "$(grep compat_version /etc/config.mesh/_setup)" = "" ]; then
    case "$(/usr/local/bin/get_boardid)" in
        MikroTik\ hAP\ ac2)
            echo "compat_version = 1.1" >> /etc/config.mesh/_setup
            echo "compat_version = 1.1" >> /etc/config.mesh/_setup.default
            /sbin/uci -q set system.@system[0].compat_version=1.1
            /sbin/uci -q commit system
            ;;
        *)
            echo "compat_version = 1.0" >> /etc/config.mesh/_setup
            echo "compat_version = 1.0" >> /etc/config.mesh/_setup.default
            /sbin/uci -q set system.@system[0].compat_version=1.0
            /sbin/uci -q commit system
            ;;
    esac
fi
