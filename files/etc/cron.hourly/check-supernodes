require("nixio")
require("uci")
require("aredn.hardware")

local hosts_file = "/tmp/run/hosts_olsr.stable"
local resolv_conf_file = "/tmp/resolv.conf.d/resolv.conf.auto"

if uci.cursor():get("aredn", "@supernode[0]", "enabled") == "1" then
    os.exit(0)
end

local lines = {}

if nixio.fs.stat(hosts_file) then
    for line in io.lines(hosts_file)
    do
        local ip = line:match("^(%S+)%s+supernode%.")
        if ip then
            lines[#lines + 1] = "nameserver " .. ip
        end
    end
end

local ignore = true
for line in io.lines(resolv_conf_file)
do
    if ignore then
        if line:match("^#") then
            ignore = false
            lines[#lines + 1] = line
        end
    else
        lines[#lines + 1] = line
    end
end

local f = io.open(resolv_conf_file, "w")
if f then
    for _, line in ipairs(lines)
    do
        f:write(line .. "\n")
    end
    f:close()
end
