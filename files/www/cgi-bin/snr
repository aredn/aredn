require("aredn.hardware");
require("iwinfo")

local q = os.getenv("QUERY_STRING") or ""
local mac = q:match("mac=([^&]*)") or "00:00:00:00:00:00"

local wifiiface = aredn.hardware.get_iface_name("wifi")
local nf = iwinfo.nl80211.noise(wifiiface) or -95

print("Content-type: application/json\r")
print("Cache-Control: no-store\r")
print("Access-Control-Allow-Origin: *\r")
print("\r")

local signal = nf
local f = io.popen("/usr/sbin/iw " .. wifiiface .. " station get " .. mac .. " 2>/dev/null")
if f then
    for line in f:lines()
    do
        local s = line:match("signal:%s+(%S+)%s+")
        if s then
            signal = s
            break
        end
    end
    f:close()
end

print('{"s":' .. signal .. ',"n":' .. nf .. '}')
